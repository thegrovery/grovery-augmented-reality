<style lang="scss">
	.Sandbox{
		width: 100%;
		height: 100%;
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		background: repeating-linear-gradient(
		  45deg,
		  var(--background-color),
		  var(--background-color) 20px,
		  var(--accent-color-light) 20px,
		  var(--accent-color-light) 40px
		);
	}
	.notice{
		position: absolute;
		top: var(--padding-1);
		top: 0;
		left: 50%;
		transform: translateX(-50%);
	}
	.placeholder{
		text-align: center;
	}
