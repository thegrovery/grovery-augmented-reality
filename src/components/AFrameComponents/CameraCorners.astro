---

const {position} = Astro.props;
---
<div class="cameraCornerGroup">
	<img class="topLeft" src="/images/vr-assets-global/camera-corner-top-left.svg" />
	<img class="topRight" src="/images/vr-assets-global/camera-corner-top-right.svg" />

	<img class="bottomLeft" src="/images/vr-assets-global/camera-corner-bottom-left.svg" />
	<img class="bottomRight" src="/images/vr-assets-global/camera-corner-bottom-right.svg" />
</div>



<style lang="scss">
	.cameraCornerGroup{
		position: fixed;
		top: 0;
		left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
		z-index: 10000;

        img{
            width: 5vw;
            height: 5vw;
        }

        .topLeft{
            position: absolute;
            top: 1vw;
            left: 1vw;
        }
        .topRight{
            position: absolute;
            top: 1vw;
            right: 1vw;
        }
        .bottomLeft{
            position: absolute;
            bottom: 1vw;
            left: 1vw;
        }
        .bottomRight{
            position: absolute;
            bottom: 1vw;
            right: 1vw;
        }
	}
</style>