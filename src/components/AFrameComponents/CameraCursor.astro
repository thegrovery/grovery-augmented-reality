<a-entity position="0 2 3">
    <a-entity 
		camera 
		look-controls 
		wasd-controls 
		raycaster="objects: .clickable"
	>
      	<a-entity 
			id="cursor"
			position="0 0 -0.25"
			geometry="primitive: plane; width:0.005; height:0.005;"
			material="color: cyan; shader: flat"
			cursor="maxDistance: 30; fuse: true"
			raycaster="objects: .clickable"
			animation__click=`property: scale; startEvents: click; easing: linear; dur: 150; from: ${cursorSizeFuseEnd}; to: ${cursorSize}`
			animation__fusing=`property: scale; startEvents: fusing; easing: linear; dur: 1500; from: ${cursorSizeActive}; to: ${cursorSizeFuseEnd}`
			animation__mouseenter=`property: scale; startEvents: mouseenter; easing: linear; dur: 0; to: ${cursorSizeActive}`
			animation__mouseleave=`property: scale; startEvents: mouseleave; easing: linear; dur: 500; to: ${cursorSize}`
  		>
			<a-image 
				src="/images/vr-assets-global/cursor-reticule-white.svg" 
				width="0.035" height="0.035"
			></a-image>	
			
		</a-entity>
			
		
      	
    </a-entity>
</a-entity>
